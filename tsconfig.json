{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "ES2019"
        ],
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}