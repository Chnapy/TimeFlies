{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "lib": [
      "DOM",
      "ES2019",
      "scripthost"
    ],
    "noImplicitAny": false,
    "downlevelIteration": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
