{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "lib": [
      "DOM",
      "ES2019",
      "scripthost"
    ],
    "noImplicitAny": false,
    "downlevelIteration": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": false,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "src/**/*",
    ".storybook/*",
    "benchmark/*"
  ],
  "exclude": [
    "**/node_modules",
    "src/_assets"
  ]
}